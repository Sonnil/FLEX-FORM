# FLEX-FORM Secure Database Configuration
# Copy this file to .env and update with your actual values

# Supabase Configuration (Required)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Import Configuration (Optional)
IMPORT_BATCH_SIZE=100
IMPORT_DRY_RUN=false

# Security Configuration (Optional)
ENCRYPTION_ENABLED=true
AUDIT_LOGGING=true
RLS_ENABLED=true

# Application Settings (Optional)
NODE_ENV=production
DEBUG=false

# Instructions:
# 1. Go to your Supabase dashboard (https://supabase.com/dashboard)
# 2. Select your project
# 3. Go to Settings > API
# 4. Copy the Project URL to SUPABASE_URL
# 5. Copy the service_role key to SUPABASE_SERVICE_KEY
# 6. Rename this file to .env
# 7. Run: npm run import-data
